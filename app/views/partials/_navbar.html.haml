        %li.nav-item.d-none.d-lg-block.d-xl-block
          %i.fas.fa-circle
        %li.nav-item
          = link_to "Service", service_path, class: "nav-link  active", id: 'hover-bg'
        %li.nav-item.d-none.d-lg-block.d-xl-block
          %i.fas.fa-circle
        %li.nav-item
